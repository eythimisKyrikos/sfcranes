<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inspection.SelectPositionForInspectionFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/positions_select_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_position_list_insert"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:padding="4dp" />

    <TextView
        android:id="@+id/position_select_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/inspection_footer"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_position_list_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position_select_header"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#373A3C"
        android:text="Start Inspection"
        android:textColor="#FFFFFF" />

</RelativeLayout>